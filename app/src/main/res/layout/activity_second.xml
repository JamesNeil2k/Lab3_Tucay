<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tucay.a119_sample.SecondActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/et_filename"
        android:layout_width="200dp"
        android:hint="Filename"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/et_filename"
        android:layout_alignLeft="@+id/et_filename"
        android:layout_alignStart="@+id/et_filename" />

    <Button
        android:id="@+id/btn_showSP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_showIS"
        android:layout_alignLeft="@+id/btn_showIS"
        android:layout_alignStart="@+id/btn_showIS"
        android:onClick="showSP"
        android:text="Shared Preferences"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_showIS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_showIC"
        android:layout_centerHorizontal="true"
        android:onClick="showIS"
        android:text="Internal Storage"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_showIC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_showEC"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="showIC"
        android:text="Internal Cache"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_showEC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="showEC"
        android:text="External Cache"
        android:layout_above="@+id/btn_showES"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_showES"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="showES"
        android:text="External Storage"
        android:layout_above="@+id/btn_showEPS"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_showEPS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="showEPS"
        android:text="External Public Storage"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/btn_previous"
        android:layout_alignLeft="@+id/btn_showES"
        android:layout_alignStart="@+id/btn_showES"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/btn_previous"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="previous"
        android:text="Previous"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_showEPS"
        android:layout_alignStart="@+id/btn_showEPS"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFFFFF"/>
</RelativeLayout>
